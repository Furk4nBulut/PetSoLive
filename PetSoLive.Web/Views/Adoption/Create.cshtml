@using PetSoLive.Core.Entities
@model PetSoLive.Core.Entities.Adoption

@{
    ViewData["Title"] = "Create Adoption";
}

<h2>Create Adoption</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PetId" class="control-label">Pet ID</label>
        <input asp-for="PetId" class="form-control" />
        <span asp-validation-for="PetId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
