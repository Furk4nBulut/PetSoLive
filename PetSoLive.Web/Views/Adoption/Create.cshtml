@model PetSoLive.Core.Entities.Adoption

@{
ViewData["Title"] = "Create Adoption";
}

<h2>Create Adoption</h2>

<form method="post">
    @Html.AntiForgeryToken()  <!-- This adds the CSRF token -->
    <div class="form-group">
        <label for="PetId">Select Pet</label>
        <select id="PetId" name="PetId" class="form-control" required>
            <option value="">Select Pet</option>
            @foreach (var pet in ViewBag.Pets as IEnumerable<PetSoLive.Core.Entities.Pet>)
            {
            <option value="@pet.Id">@pet.Name (@pet.Species)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="UserId">User ID</label>
        <input type="number" id="UserId" name="UserId" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
