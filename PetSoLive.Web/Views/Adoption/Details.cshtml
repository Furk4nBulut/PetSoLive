@{
ViewData["Title"] = $"Details for {Model.Pet.Name}";
}

@{
Layout = "_Layout";  // Ensure you're using the layout
}

<div class="container">
    <h2>@Model.Pet.Name</h2> <!-- Display pet's name -->
    <img src="@Model.Pet.ImageUrl" alt="@Model.Pet.Name" class="img-fluid rounded" /> <!-- Display pet's image with rounded corners -->

    <!-- Display pet's details -->
    <div class="mt-3">
        <p><strong>Age:</strong> @Model.Pet.Age</p>
        <p><strong>Description:</strong> @Model.Pet.Description</p>
    </div>

    <h3>Adoption Details:</h3>
    <div>
        <p><strong>Adopted By:</strong> @Model.User.Username</p> <!-- Display adopter's username -->
        <p><strong>Adoption Date:</strong> @Model.AdoptionDate.ToString("MM/dd/yyyy")</p> <!-- Display adoption date -->
        <p><strong>Status:</strong> @Model.Status</p> <!-- Display adoption status -->
    </div>

    <div class="mt-4">
        <a asp-controller="Adoption" asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-controller="Adoption" asp-action="Apply" asp-route-id="@Model.Id" class="btn btn-primary">Adopt</a>
    </div>
</div>
