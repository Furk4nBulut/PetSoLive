@using Microsoft.Extensions.Localization
@using PetSoLive.Web.Controllers
@inject IStringLocalizer<AdoptionController> Localizer

@section HeadSection {
    <link rel="stylesheet" href="~/css/adoption.css" />
}

<div class="adoption-page">
    <div class="container my-5">
        <div class="alert alert-warning">
            <h4>@Localizer["AlreadySubmittedRequest"]</h4>
        </div>
        <a href="@Url.Action("Details", "Pet", new { id = ViewBag.PetId })"
           class="btn-adoption">
            @Localizer["GoToPetDetails"]
        </a>
    </div>
</div>