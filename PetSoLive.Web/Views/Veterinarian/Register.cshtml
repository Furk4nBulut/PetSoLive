@{
    ViewData["Title"] = "Register as Veterinarian";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.ApplicationSubmitted != null && ViewBag.ApplicationSubmitted)
{
    <div class="alert alert-info">
        You have already submitted your application. You cannot apply again.
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="qualifications">Qualifications</label>
        <input type="text" class="form-control" id="qualifications" name="qualifications" required />
    </div>
    <div class="form-group">
        <label for="clinicAddress">Clinic Address</label>
        <input type="text" class="form-control" id="clinicAddress" name="clinicAddress" required />
    </div>
    <div class="form-group">
        <label for="clinicPhoneNumber">Clinic Phone Number</label>
        <input type="text" class="form-control" id="clinicPhoneNumber" name="clinicPhoneNumber" required />
    </div>

    <!-- Submit button disabled if application is already submitted -->
    <button type="submit" class="btn btn-primary" @(ViewBag.ApplicationSubmitted != null && ViewBag.ApplicationSubmitted ? "disabled" : "")>
        @(ViewBag.ApplicationSubmitted != null && ViewBag.ApplicationSubmitted ? "Application Submitted" : "Submit Application")
    </button>
</form>