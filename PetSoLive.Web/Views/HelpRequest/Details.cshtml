@using PetSoLive.Core.Enums
@model PetSoLive.Core.Entities.HelpRequest
@{
ViewData["Title"] = "Help Request Details";
var canEditOrDelete = ViewBag.CanEditOrDelete as bool? ?? false; // Check if the user can edit or delete
}

<h1 class="mb-4 text-primary">@Model.Title</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">
            Emergency Level:
            <span class="badge badge-pill badge-danger">@Model.EmergencyLevel</span>
        </h5>

        <!-- Status Display with Custom Style -->
        <p class="card-text">
            <strong>Status:</strong>
            <span class="status-label 
                @(Model.Status == HelpRequestStatus.Active ? "status-active" : "status-passive")">
                @Model.Status
            </span>
        </p>

        <p class="card-text"><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>
        <p class="card-text"><strong>Location:</strong> @Model.Location</p>

        @if (!string.IsNullOrEmpty(Model.ContactName))
        {
        <p class="card-text"><strong>Contact Name:</strong> <span class="font-weight-bold">@Model.ContactName</span></p>
        }
        @if (!string.IsNullOrEmpty(Model.ContactPhone))
        {
        <p class="card-text"><strong>Contact Phone:</strong> <span class="font-weight-bold">@Model.ContactPhone</span></p>
        }
        @if (!string.IsNullOrEmpty(Model.ContactEmail))
        {
        <p class="card-text"><strong>Contact Email:</strong> <span class="font-weight-bold">@Model.ContactEmail</span></p>
        }

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
        <div class="mt-3">
            <img src="@Model.ImageUrl" alt="Help Request Image" class="img-fluid rounded shadow-sm" />
        </div>
        }

        <p class="card-text mt-3"><strong>Description:</strong> @Model.Description</p>

        @if (canEditOrDelete)
        {
        <div class="mt-3">
            <a href="@Url.Action("Edit", "HelpRequest", new { id = Model.Id })" class="btn btn-warning btn-lg">Edit</a>
            <form method="post" asp-action="Delete" asp-route-id="@Model.Id" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this help request?')">Delete</button>
            </form>
        </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "HelpRequest")" class="btn btn-secondary">Back to Help Requests</a>
</div>
