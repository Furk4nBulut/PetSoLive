@model IEnumerable<PetSoLive.Core.Entities.HelpRequest>

@{
ViewData["Title"] = "Help Requests";
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <div class="col-12">
        <a class="btn btn-primary" href="@Url.Action("Create", "HelpRequest")">Create New Help Request</a>
    </div>
</div>

<div class="list-group">
    @foreach (var helpRequest in Model)
    {
    <div class="list-group-item">
        <div class="d-flex justify-content-between align-items-center">
            <h5><a href="@Url.Action("Details", "HelpRequest", new { id = helpRequest.Id })">@helpRequest.Description</a></h5>
            <span class="badge badge-pill badge-info">@helpRequest.EmergencyLevel</span>
        </div>
        <div class="mt-2">
            <p><strong>Created At:</strong> @helpRequest.CreatedAt.ToString("g")</p>
            <p><strong>Location:</strong> @helpRequest.Location</p>

            @if (!string.IsNullOrEmpty(helpRequest.ContactName))
            {
            <p><strong>Contact Name:</strong> @helpRequest.ContactName</p>
            }

            @if (!string.IsNullOrEmpty(helpRequest.ContactPhone))
            {
            <p><strong>Contact Phone:</strong> @helpRequest.ContactPhone</p>
            }

            @if (!string.IsNullOrEmpty(helpRequest.ContactEmail))
            {
            <p><strong>Contact Email:</strong> @helpRequest.ContactEmail</p>
            }

            @if (!string.IsNullOrEmpty(helpRequest.ImageUrl))
            {
            <div class="mt-2">
                <img src="@helpRequest.ImageUrl" alt="Help Request Image" class="img-fluid" />
            </div>
            }
        </div>
    </div>
    }
</div>

<!-- Pagination controls (optional) -->
<div class="pagination-container mt-3">
    @* Add your pagination links here (e.g., @Html.PagedListPager(Model)) *@
</div>
