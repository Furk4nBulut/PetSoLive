
@{
ViewData["Title"] = "Help Requests";
}

<h1>Help Requests</h1>

@foreach (var helpRequest in Model)
{
<div class="help-request-item">
    <h3><a href="@Url.Action("Details", "HelpRequest", new { id = helpRequest.Id })">@helpRequest.Description</a></h3>
    <p><strong>Emergency Level:</strong> @helpRequest.EmergencyLevel</p>
    <p><strong>Created At:</strong> @helpRequest.CreatedAt.ToString("g")</p>
    <hr />
</div>
}

<a href="@Url.Action("Create", "HelpRequest")">Create New Help Request</a>
