            <li><strong>@Localizer["PetProfiles"]</strong></li>
            <li><strong>@Localizer["RealTimeNotifications"]</strong></li>
        </ul>
    </section>

    <section>
        <h3>@Localizer["WhyChoose"]</h3>
        <p>@Localizer["WhyChooseText"]</p>
        <ul>
            <li>@Localizer["FindLostPets"]</li>
            <li>@Localizer["EmergencyServices"]</li>
            <li>@Localizer["StreamlineAdoption"]</li>
            <li>@Localizer["ShareExperiences"]</li>
            <li>@Localizer["SupportWelfare"]</li>
        </ul>
    </section>

    <section>
        <h3>@Localizer["OurVision"]</h3>
        <p>@Localizer["VisionText"]</p>
    </section>

    <section>
        <h3>@Localizer["ProjectDevelopers"]</h3>
        <p>@Localizer["DevelopersText"]</p>
        <ul>
            <li><strong>@Localizer["FurkanBulut"]</strong>: @Localizer["FurkanBulutRole"]</li>
