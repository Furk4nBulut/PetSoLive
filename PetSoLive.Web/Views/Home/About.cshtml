            <li><strong>@Localizer["VideoConsultations"]</strong></li>
            <li><strong>@Localizer["CommunityForums"]</strong></li>
            <li><strong>@Localizer["IoTIntegration"]</strong></li>
        </ul>
    </section>

    <section>
        <h3>@Localizer["Conclusion"]</h3>
        <p>@Localizer["ConclusionText"]</p>
    </section>
</div>