    </section>

    <section>
        <h3>@Localizer["WhatWeOffer"]</h3>
        <p>@Localizer["OfferList"]</p>
        <ul>
            <li><strong>@Localizer["AdoptionStories"]</strong></li>
            <li><strong>@Localizer["LostPetAds"]</strong></li>
            <li><strong>@Localizer["EmergencyHelp"]</strong></li>
