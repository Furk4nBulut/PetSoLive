@{
ViewData["Title"] = "Create Pet for Adoption";
}

@{
Layout = "_Layout";
}

<div class="container">
    <h2 class="my-4 text-center">Create Pet for Adoption</h2>

    <form asp-controller="Pet" asp-action="Create" method="post" enctype="multipart/form-data">
        @if (!ViewData.ModelState.IsValid)
        {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
        }
        <!-- Pet Name -->
        <div class="form-group">
            <label for="Name">Pet Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required />
        </div>

        <!-- Species -->
        <div class="form-group">
            <label for="Species">Species</label>
            <input type="text" class="form-control" id="Species" name="Species" value="@Model?.Species" required />
        </div>

        <!-- Breed -->
        <div class="form-group">
            <label for="Breed">Breed</label>
            <input type="text" class="form-control" id="Breed" name="Breed" value="@Model?.Breed" required />
        </div>

        <!-- Age -->
        <div class="form-group">
            <label for="Age">Age</label>
            <input type="number" class="form-control" id="Age" name="Age" value="@Model?.Age" required />
        </div>

        <!-- Gender -->
        <div class="form-group">
            <label>Gender</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="Male" name="Gender" value="Male" @(Model?.Gender == "Male" ? "checked" : "") required />
                <label class="form-check-label" for="Male">Male</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="Female" name="Gender" value="Female" @(Model?.Gender == "Female" ? "checked" : "") required />
                <label class="form-check-label" for="Female">Female</label>
            </div>
        </div>

        <!-- Weight -->
        <div class="form-group">
            <label for="Weight">Weight</label>
            <input type="number" step="0.1" class="form-control" id="Weight" name="Weight" value="@Model?.Weight" required />
        </div>

        <!-- Color -->
        <div class="form-group">
            <label for="Color">Color</label>
            <input type="text" class="form-control" id="Color" name="Color" value="@Model?.Color" required />
        </div>

        <!-- Date of Birth -->
        <div class="form-group">
            <label for="DateOfBirth">Date of Birth</label>
            <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model?.DateOfBirth?.ToString("yyyy-MM-dd")" required />
        </div>

        <!-- Description -->
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="3" required>@Model?.Description</textarea>
        </div>

        <!-- Image URL -->
        <div class="form-group">
            <label for="ImageUrl">Image URL</label>
            <input type="url" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model?.ImageUrl" />
        </div>

        <!-- Vaccination Status -->
        <div class="form-group">
            <label for="VaccinationStatus">Vaccination Status</label>
            <input type="text" class="form-control" id="VaccinationStatus" name="VaccinationStatus" value="@Model?.VaccinationStatus" />
        </div>

        <!-- Microchip ID -->
        <div class="form-group">
            <label for="MicrochipId">Microchip ID</label>
            <input type="text" class="form-control" id="MicrochipId" name="MicrochipId" value="@Model?.MicrochipId" />
        </div>

        <!-- Is Neutered -->
        <div class="form-group form-check">
            <label for="IsNeutered" class="form-check-label">Is Neutered?</label>
            <input type="checkbox" class="form-check-input" id="IsNeutered" name="IsNeutered" @(Model?.IsNeutered == true ? "checked" : "") />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Create Pet</button>
    </form>

</div>
