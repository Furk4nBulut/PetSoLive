@using Microsoft.Extensions.Localization
@using PetSoLive.Web.Controllers
@inject IStringLocalizer<PetController> Localizer

@{
    ViewData["Title"] = Localizer["DeletePetTitle"];
    Layout = "_Layout";
}

@section HeadSection {
    <link rel="stylesheet" href="~/css/pet.css" />
}

<div class="pet-page">
    <div class="pet-container">
        <h2>@Localizer["DeletePetTitle"]</h2>
        <p>@Html.Raw(string.Format(Localizer["DeleteConfirmationMessage"], Model.Name))</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn-pet">@Localizer["DeleteButton"]</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary ml-2">@Localizer["CancelButton"]</a>
        </form>
    </div>
</div>