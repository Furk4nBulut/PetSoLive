@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetSoLive</title>

    <meta name="google-site-verification" content="eWJ1V70hKDXQtBXfannf1JqGRcRbSXUXnvaQk7UNeqM" />
    <meta name="description" content="@Localizer["PetSoLive Description"]" />
    <meta name="author" content="PetSoLive" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#343a40" />
    <meta name="msapplication-TileColor" content="#343a40" />
    <meta name="msapplication-TileImage" content="~/img/favicon/ms-icon-144x144.png" />
    <meta name="msapplication-config" content="~/img/favicon/browserconfig.xml" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adoption.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/helpRequest.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/lostPetAd.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pet.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/veterinarian.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    @RenderSection("HeadSection", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark petsolive-navbar sticky-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/logo.png" alt="PetSoLive Logo" style="height:36px;width:auto;" class="me-2 d-inline-block align-text-top" />
                <span class="fw-bold">@Localizer["PetSoLive"]</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="@Localizer["Toggle Navigation"]">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-2">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> @Localizer["Home"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle-fill"></i> @Localizer["About"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Adoption" asp-action="Index">
                            <i class="bi bi-clipboard-heart-fill"></i> @Localizer["Adoption"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LostPetAd" asp-action="Index">
                            <i class="bi bi-bookmark-heart-fill"></i> @Localizer["Lost Pet Ads"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HelpRequest" asp-action="Index">
                            <i class="bi bi-chat-square-heart-fill"></i> @Localizer["Help Requests"]
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav mb-2 mb-lg-0 gap-lg-2 align-items-lg-center">
                    @if (string.IsNullOrEmpty(Context.Session.GetString("Username")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> @Localizer["Login"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-pencil-square"></i> @Localizer["Register"]
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @{
                                    var username = Context.Session.GetString("Username");
                                }
                                <i class="bi bi-person-circle"></i> @Localizer["Welcome"] @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Veterinarian" asp-action="Index">
                                        <i class="bi bi-activity"></i> @Localizer["Veterinarians"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Veterinarian" asp-action="Register">
                                        <i class="bi bi-clipboard-plus-fill"></i> @Localizer["Veterinarian Register"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-left"></i> @Localizer["Logout"]
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    <li class="nav-item">
                        @{
                            var currentCulture = CultureInfo.CurrentCulture.Name;
                            var newCulture = currentCulture == "en-US" ? "tr-TR" : "en-US";
                            var flag = currentCulture switch
                            {
                                "en-US" => "🇺🇸",
                                "tr-TR" => "🇹🇷",
                                _ => "🌐"
                            };
                        }
                        <a class="nav-link" asp-controller="Home" asp-action="SetLanguage" asp-route-culture="@newCulture" asp-route-returnUrl="@Context.Request.Path">
                            @flag @Localizer["Swicth"]
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



<div class="container pt-3 flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="petsolive-footer pro-footer pt-5 pb-0">
    <div class="container-xl">
        <div class="row g-4 align-items-start text-center text-lg-start mb-0 pb-0">
            <!-- Kurumsal -->
            <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-0">
                <div class="footer-title mb-3">@Localizer["Corporate"]</div>
                <ul class="footer-link-list">
                    <li><a href="#">@Localizer["About"]</a></li>
                    <li><a href="#">@Localizer["Board"]</a></li>
                    <li><a href="#">@Localizer["PresidentMessage"]</a></li>
                    <li><a href="#">@Localizer["Regulation"]</a></li>
                    <li><a href="#">@Localizer["AccountNumbers"]</a></li>
                    <li><a href="#">@Localizer["FAQ"]</a></li>
                </ul>
            </div>
            <!-- Orta: Logo ve açıklama -->
            <div class="col-lg-4 col-md-12 col-12 d-flex flex-column align-items-center justify-content-center mb-4 mb-lg-0">
                <img src="~/logo.png" alt="PetSoLive Logo" style="height:54px;width:auto;" class="mb-2" />
                <div class="footer-center-title mb-2">PetSoLive</div>
                <div class="footer-center-desc">@Localizer["footerDescriptionContent"]</div>
            </div>
            <!-- Faaliyetlerimiz -->
            <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-0">
                <div class="footer-title mb-3">@Localizer["OurActivities"]</div>
                <ul class="footer-link-list align-items-lg-end">
                    <li><a href="#">@Localizer["FoodDistribution"]</a></li>
                    <li><a href="#">@Localizer["StreetHotFood"]</a></li>
                    <li><a href="#">@Localizer["HomeHotFood"]</a></li>
                    <li><a href="#">@Localizer["PhotoGallery"]</a></li>
                    <li><a href="#">@Localizer["Videos"]</a></li>
                    <li><a href="#">@Localizer["Contact"]</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom-row d-flex flex-column flex-md-row justify-content-between align-items-center pt-3 mt-4 border-0 gap-3">
            <div class="d-flex align-items-center gap-3 mb-2 mb-md-0">
                <a href="#" target="_blank" title="Twitter" rel="noopener" class="footer-social-icon"><i class="bi bi-twitter"></i></a>
                <a href="#" target="_blank" title="Facebook" rel="noopener" class="footer-social-icon"><i class="bi bi-facebook"></i></a>
                <a href="#" target="_blank" title="Instagram" rel="noopener" class="footer-social-icon"><i class="bi bi-instagram"></i></a>
            </div>
            <div class="footer-copyright text-light small opacity-75 text-center flex-grow-1">
                &copy; 2025 PetSoLive - BulutSoft @Localizer["All rights reserved."]
            </div>
            <div class="d-flex align-items-center justify-content-center">
                @{
                    var footerCurrentCulture = CultureInfo.CurrentCulture.Name;
                    var footerNewCulture = footerCurrentCulture == "en-US" ? "tr-TR" : "en-US";
                    var footerFlag = footerCurrentCulture switch
                    {
                        "en-US" => "🇺🇸",
                        "tr-TR" => "🇹🇷",
                        _ => "🌐"
                    };
                }
                <a href="@Url.Action("SetLanguage", "Home", new { culture = footerNewCulture, returnUrl = Context.Request.Path })" class="footer-language-link ms-2">
                    <i class="bi bi-translate"></i> @footerFlag @Localizer["Swicth"]
                </a>
            </div>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
