@{
ViewData["Title"] = "Delete Lost Pet Ad";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete the lost pet ad?</h5>
        <p><strong>Pet Name:</strong> @Model.PetName</p>
        <p><strong>Location:</strong> @Model.LastSeenLocation</p>
        <p><strong>Posted on:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>

        <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
            <input type="submit" value="Yes, delete" class="btn btn-danger" />
            <a href="@Url.Action("Index", "LostPetAd")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
