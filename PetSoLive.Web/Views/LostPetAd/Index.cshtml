
@{
ViewData["Title"] = "Lost Pet Ads";
}

<h1>Lost Pet Ads</h1>

<form method="get">
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" />
    <button type="submit">Search</button>
</form>

@foreach (var lostPetAd in Model)
{
<div class="lost-pet-ad-item">
    <h3><a href="@Url.Action("Details", "LostPetAd", new { id = lostPetAd.Id })">@lostPetAd.Description</a></h3>
    <p><strong>Last Seen Location:</strong> @lostPetAd.LastSeenLocation</p>
    <p><strong>Created At:</strong> @lostPetAd.CreatedAt.ToString("g")</p>
    <hr />
</div>
}

<a href="@Url.Action("Create", "LostPetAd")">Create New Lost Pet Ad</a>
