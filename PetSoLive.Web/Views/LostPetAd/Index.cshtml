@{
ViewData["Title"] = "Lost Pet Ads";
}

<h2>@ViewData["Title"]</h2>

<div>
    <a href="@Url.Action("Create", "LostPetAd")" class="btn btn-success">Create New Lost Pet Ad</a>
</div>

<hr />

<!-- Success and Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success">
    @TempData["SuccessMessage"]
</div>
}

@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger">
    @TempData["ErrorMessage"]
</div>
}

<!-- Display Lost Pet Ads in Card Layout -->
<div class="row">
    @foreach (var ad in Model)
    {
    <div class="col-md-4">
        <div class="card">
            @if (!string.IsNullOrEmpty(ad.ImageUrl))
            {
            <img src="@ad.ImageUrl" class="card-img-top" alt="Pet Image">
            }
            else
            {
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="No Image Available">
            }
            <div class="card-body">
                <h5 class="card-title">@ad.PetName</h5>
                <p class="card-text">@ad.Description</p>
                <p class="card-text"><small class="text-muted">@ad.LastSeenLocation</small></p>
                <a href="@Url.Action("Details", "LostPetAd", new { id = ad.Id })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    }
</div>
